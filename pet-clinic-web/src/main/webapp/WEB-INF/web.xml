<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4/xsd"
         version="2.4">

    <display-name>PetClinic</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:spring-context.xml
        </param-value>
    </context-param>

    <!-- Creates the Spring Container shared by all Servlets and Filters -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Processes application requests -->
    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                classpath:spring-context.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ClinicViewServlet</servlet-name>
        <servlet-class>kg.djedai.servlets.ClinicViewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClinicViewServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientViewServlet</servlet-name>
        <servlet-class>kg.djedai.servlets.ClientViewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientViewServlet</servlet-name>
        <url-pattern>/client/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientCreateServlet</servlet-name>
        <servlet-class>kg.djedai.servlets.ClientCreateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientCreateServlet</servlet-name>
        <url-pattern>/client/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientEditServlet</servlet-name>
        <servlet-class>kg.djedai.servlets.ClientEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientEditServlet</servlet-name>
        <url-pattern>/client/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientDeleteServlet</servlet-name>
        <servlet-class>kg.djedai.servlets.ClientDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientDeleteServlet</servlet-name>
        <url-pattern>/client/delete</url-pattern>
    </servlet-mapping>



</web-app>
